<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_add_news"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/white"
        android:minHeight="?attr/actionBarSize"
        app:titleTextAppearance="@style/TitleText">


        <TextView
            android:id="@+id/title"
            android:layout_width="172dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingExtra="2sp"
            android:text="Add News"
            android:textAppearance="@style/title_profile"
            android:translationY="-0.86sp"
            android:textColor="@android:color/black" />


    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="20dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:orientation="vertical"
        android:layout_weight="0.45">

        <EditText

            android:id="@+id/etTitleNews"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Enter News Title"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:textAppearance="@style/label.name"
            android:textSize="15sp" />
        <EditText
            android:id="@+id/etTimeEvent"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Enter Time of an event"
            android:gravity="center"
            android:textAppearance="@style/label.name"
            android:textSize="15sp"
            android:layout_marginTop="15dp" />
        <EditText
            android:id="@+id/etPlaceEvent"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:hint="Enter Place of an event(Not required)"
            android:textAppearance="@style/label.name"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:weightSum="1"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp">
            <Button
                android:id="@+id/addDescriptionBtn"
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:layout_height="40dp"
                android:textSize="15sp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textAppearance="@style/title_registr_btn"
                android:backgroundTint="@color/colorPrimaryDark"
                android:background="@drawable/btn_registr_bg"
                android:text="Add Description" />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.2">

            </FrameLayout>

            <Button
                android:id="@+id/uploadImgBtn"
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:layout_height="40dp"
                android:textSize="15sp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textAppearance="@style/title_registr_btn"
                android:backgroundTint="@color/colorAccent"
                android:background="@drawable/btn_registr_bg"
                android:text="Upload Image" />

        </LinearLayout>




    </LinearLayout>



    <ImageView
        android:id="@+id/uploadedImgView"
        android:layout_weight="0.45"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp" />

    <ProgressBar
        android:id="@+id/progress_bar_add_news"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.025"
        android:layout_marginBottom="10dp" />


    <Button
        android:id="@+id/addNewsBtn"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.075"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_registr_bg"
        android:textAppearance="@style/title_registr_btn"
        android:text="Add News" />


</LinearLayout>
