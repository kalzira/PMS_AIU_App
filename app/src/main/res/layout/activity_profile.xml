        android:id="@+id/balance_profile"
        android:layout_width="55dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="18dp"
        android:fontFeatureSettings="pnum, lnum"
        android:gravity="top"
        android:lineSpacingExtra="4sp"
        android:text="@string/balance_profile"
        android:textAppearance="@style/label_profile"
        android:translationY="-1.8sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/status_profile" />


    <!-- 0 USD -->
    <TextView
        android:id="@+id/usd_profile"
        android:layout_width="144dp"
        android:layout_height="22dp"
        android:layout_marginStart="63dp"
        android:layout_marginLeft="63dp"
        android:layout_marginTop="16dp"
        android:fontFeatureSettings="pnum, lnum"
        android:gravity="top"
        android:lineSpacingExtra="4sp"
        android:text="@string/usd_profile"
        android:textAppearance="@style/info_profile"
        android:translationY="-1.8sp"
